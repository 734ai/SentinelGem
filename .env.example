# SentinelGem Environment Configuration Template
# Copy this file to .env and customize settings

# Model Configuration
GEMMA_MODEL_PATH=google/gemma-2-2b-it
WHISPER_MODEL_SIZE=base
MODEL_DEVICE=auto

# Detection Thresholds
THREAT_CONFIDENCE_THRESHOLD=0.7
PHISHING_CONFIDENCE_THRESHOLD=0.8
AUDIO_ANOMALY_THRESHOLD=0.6
MALWARE_CONFIDENCE_THRESHOLD=0.8

# System Configuration
LOG_LEVEL=INFO
MAX_INPUT_SIZE_MB=50
MAX_AUDIO_DURATION_MINUTES=10
NOTEBOOK_OUTPUT_DIR=./notebooks/autogen

# Performance Settings
MAX_TOKENS=512
TEMPERATURE=0.1
TOP_P=0.9
BATCH_SIZE=1

# Optional: HuggingFace Token (for model downloads)
# HF_TOKEN=your_huggingface_token_here

# Security Settings
ENABLE_LOGGING=true
SANITIZE_OUTPUTS=true
AUTO_GENERATE_NOTEBOOKS=true

# UI Configuration (if using web interface)
UI_PORT=3000
API_PORT=8000
ENABLE_REAL_TIME_MONITORING=true

# Advanced Features (Optional)
ENABLE_FEDERATED_LEARNING=false
ENABLE_BLOCKCHAIN_INTEL=false
ENABLE_VISUAL_THREAT_DETECTION=true

# Deployment Settings
PRODUCTION_MODE=false
DEBUG_MODE=false
